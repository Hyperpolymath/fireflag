-- Idris2 package file for FireFlag FFI modules

package fireflag

version = 0.1.0
authors = "Jonathan D.A. Jewell"
license = "PMPL-1.0-or-later"
brief = "Firefox flag management FFI with safety proofs"
readme = "README.md"

depends = base >= 0.6.0
        , contrib

sourcedir = "."

modules = FlagSafety
        , FlagTransaction
        , SafeUI

main = Main
executable = fireflag

opts = "--cg chez"
      , "--total"
      , "--coverage"
