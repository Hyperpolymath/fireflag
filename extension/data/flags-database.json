  "flags": [
    {
      "key": "privacy.resistFingerprinting",
      "type": "boolean",
      "category": "privacy",
      "safetyLevel": "safe",
      "defaultValue": false,
      "description": "Enable fingerprinting resistance to make browser tracking harder",
      "effects": {
        "positive": [
          "Reduces browser fingerprinting",
          "Enhances privacy"
        ],
        "negative": [
          "May break some websites that rely on accurate timezone/screen info",
          "Can affect canvas-based visualizations"
        ],
        "interesting": [
          "Spoofs timezone to UTC",
          "Reports generic screen resolution"
        ]
      },
      "permissions": [],
      "geckoMinVersion": "58.0",
      "documentation": "https://wiki.mozilla.org/Security/Fingerprinting"
    },
    {
      "key": "browser.tabs.drawInTitlebar",
      "type": "boolean",
      "category": "ui",
      "safetyLevel": "safe",
      "defaultValue": true,
      "description": "Draw tabs in the title bar area (disable for traditional titlebar)",
      "effects": {
        "positive": [
          "More vertical screen space when enabled",
          "Modern UI appearance"
        ],
        "negative": [
          "No traditional window title when enabled"
        ],
        "interesting": [
          "Affects window manager integration on Linux",
          "Changes drag behavior on window edges"
        ]
      },
      "permissions": [],
      "geckoMinVersion": "4.0"
    },
    {
