      "category": "experimental",
      "safetyLevel": "safe",
      "defaultValue": true,
      "description": "Enable CSS Grid Layout support",
      "effects": {
        "positive": [
          "Modern CSS layout capabilities",
          "Better responsive design support"
        ],
        "negative": [],
